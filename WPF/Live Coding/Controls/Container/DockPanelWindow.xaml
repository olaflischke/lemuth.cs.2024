<Window x:Class="Controls.Container.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controls.Container"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Left" Content="Button" Width="100" Height="100" VerticalAlignment="Top"/>
        <Button DockPanel.Dock="Top" Content="Button" />
        <Button DockPanel.Dock="Top" Content="Button" />
    </DockPanel>
</Window>
