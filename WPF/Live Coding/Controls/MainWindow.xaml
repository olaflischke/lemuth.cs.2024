<Window x:Class="Controls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="198*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="152*"/>
        </Grid.ColumnDefinitions>

        <Button Width="20" Height="20" >
            <DockPanel>
                <Image DockPanel.Dock="Top" Source="/IMG_2263-512-rd.png" Width="10" Height="10" />
                <TextBlock Text="Klick" FontSize="3"/>
            </DockPanel>
        </Button>

        <TreeView Grid.Column="0" Grid.Row="1" />

        <DataGrid Grid.Column="2" Grid.Row="1" />

    </Grid>
</Window>
